---
import Separator from "@components/ui/Separator.astro";
import Compass from "@assets/icons/Compass.astro";
import type { MainRecent } from "@lib/types";
import Button from "./Button.astro";
import type { CollectionEntry } from "astro:content";
import SliderProjects from "@components/ui/SliderProjects.astro";

interface Props {
  lang: string;
  texts: MainRecent;
  projects: CollectionEntry<"projects">[];
}

const { lang, texts, projects } = Astro.props;
---

<section class="space-y-8 px-6 py-8 lg:py-12" aria-label={texts.title}>
  <Separator>
    <h2
      class="font-title text-3xl tracking-tight uppercase sm:text-5xl lg:text-7xl"
    >
      {texts.title}
    </h2>
  </Separator>
  <SliderProjects items={projects} />
  <div class="flex items-center justify-center sm:col-span-3">
    <Button lang={lang} to="catalog/1">
      {texts.button}
      <Compass
        styles="size-5 md:size-6 group-hover:rotate-180 transition-tranform ease-in-out duration-300"
      />
    </Button>
  </div>
</section>
